// Updated Prisma schema and seed.ts for a POS general shop system
// The schema now focuses on Products, Sales, Inventory, and Staff

// --- SCHEMA.PRISMA ---
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  CASHIER
  ADMIN
}

model User {
  id         String  @id @default(cuid())
  name       String
  email      String  @unique
  password   String
  role       Role    @default(CUSTOMER)
  profilePic String?

  sales       Sale[]
  stockInputs StockInput[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String          @id @default(cuid())
  name        String
  image       String?
  sku         String          @unique
  description String?
  price       Float
  stock       Int             @default(0)
  category    ProductCategory @default(OTHER)

  saleItems   SaleItem[]
  stockInputs StockInput[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductCategory {
  FOOD // Includes groceries, snacks, bakery, meat, dairy, etc.
  DRINK // Water, soft drinks, juices, alcohol.
  HOUSEHOLD // Cleaning supplies, kitchenware.
  PERSONAL // Personal care, cosmetics, baby products.
  ELECTRONICS // Gadgets, accessories, batteries.
  CLOTHING // Apparel, footwear.
  STATIONERY // Office and school supplies.
  OTHER // For miscellaneous or uncategorized items.
}

model Sale {
  id        String  @id @default(cuid())
  cashier   User    @relation(fields: [cashierId], references: [id])
  cashierId String
  total     Float
  paid      Boolean @default(false)

  items SaleItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SaleItem {
  id        String  @id @default(cuid())
  sale      Sale    @relation(fields: [saleId], references: [id])
  saleId    String
  product   Product @relation(fields: [productId], references: [id], onDelete: NoAction)
  productId String
  quantity  Int
  price     Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StockInput {
  id        String  @id @default(cuid())
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int
  addedBy   User    @relation(fields: [addedById], references: [id])
  addedById String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
